{
    "manifest_version": 3,
    "name": "TikTok Comment Scraper",
    "version": "1.0",
    "permissions": ["activeTab", "scripting", "storage", "tabs"],
    "host_permissions": ["http://localhost:5000/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://www.tiktok.com/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }